DECLARE
  TYPE EMP_TYPE IS RECORD (FIRST_NAME EMPLOYEES_COPY.FIRST_NAME%TYPE,
                         LAST_NAME  EMPLOYEES_COPY.LAST_NAME%TYPE,
                         SALARY      EMPLOYEES_COPY.SALARY%TYPE);
  TYPE E_LIST IS TABLE OF EMP_TYPE INDEX BY EMPLOYEES_COPY.FIRST_NAME%TYPE;
  EMP E_LIST;
  INDX  EMPLOYEES_COPY.SALARY%TYPE;
BEGIN
  FOR I IN 100 .. 105 LOOP
    SELECT FIRST_NAME,LAST_NAME,SALARY INTO   EMP(I) 
    FROM   EMPLOYEES_COPY
    WHERE  EMPLOYEE_ID = I;
  END LOOP;
  INDX := EMP.FIRST;
  WHILE INDX IS NOT NULL LOOP
    DBMS_OUTPUT.PUT_LINE('The Salary of '       || 
                          EMP(INDX).FIRST_NAME || ' ' ||
                          EMP(INDX).LAST_NAME  || ' @  ' || 
                          EMP(INDX).SALARY);
    INDX := EMP.NEXT(INDX);
  END LOOP; 
END;

